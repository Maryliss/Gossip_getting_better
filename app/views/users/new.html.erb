
<html>
  <body>  

      <!-- ... -->

        <p>Formulaire d'inscription </p>
        <%= form_tag url_for(action: 'create'), method: "post" do %>
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

          <%= label_tag 'Ton prénom' %>
          <%= text_field_tag 'first_name', @user.first_name %>
          <br /> <br />

          <%= label_tag 'Ton nom' %>
          <%= text_field_tag 'last_name', @user.last_name %>
          <br /> <br />

          <%= label_tag 'Ton email' %>
          <%= text_field_tag 'email', @user.email %>
          <br /> <br />     

          <%= label_tag 'Ta ville' %>
          <%= text_field_tag 'city_id', @user.city_id %>
          <br /> <br />           

          <%= label_tag 'Ton mot de passe' %>
          <%= text_field_tag 'password', @user.password %>
          <br /> <br />

          <%= label_tag 'Ton âge' %>
          <%= text_field_tag 'age', @user.age %>
          <br /> <br />

          <%= label_tag 'Ta descritpion' %>
          <%= text_area_tag 'description', @user.description %>
          <br /> <br />      

            <%= submit_tag "Valider mon formulaire d'inscription" %>

        <% end %>

      <!-- ... -->

  </body>
</html>