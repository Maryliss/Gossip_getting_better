
<html>
  <body>  

      <!-- ... -->

        <p>C'est quoi ton potin? </p>
        <%= form_tag url_for(action: 'create'), method: "post" do %>
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

          <%= label_tag 'Titre du potin' %>
          <%= text_field_tag 'title', @potin.title %>
          <br /> <br />

          <%= label_tag 'Contenu du potin' %>
          <%= text_area_tag 'content', @potin.content %>
          <br /> <br />

            <%= submit_tag "Valider mon potin" %>

        <% end %>

    <% if @potin.errors.any? %>
          <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
          <ul>
        <% @potin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
          </ul>
     <% end %>
      <!-- ... -->

  </body>
</html>