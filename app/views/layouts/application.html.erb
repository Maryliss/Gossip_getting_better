    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

   
    <!---this is bootsnipp--->
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!---this is bootsnipp--->

  </head>

  <body>
   
    <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex">
    <div>
      <a href="<%= potins_path %>" class="navbar-brand">LaNavPotins</a>  
      <a href="<%= potins_path %>" class="navbar-brand">Consulter les potins</a>  
      <a href="<%= new_potin_path %>" class="navbar-brand">Lancer un potin</a> 
      <a href="<%= contact_path %>" class="navbar-brand">Contact</a> 
      <a href="<%= team_path %>" class="navbar-brand">Team</a> 
    </div>
      
    <% if current_user %>
          <div class="dropdown show">
      <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Espace perso
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <%= link_to "Se déconnecter", session_path(session[:user_id]), method: :delete, class: "dropdown-item" %>

      </div>
    </div>

    <% else %>
          <div class="dropdown show">
      <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Connexion
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item" href="/users/new">Inscription</a>
        <a class="dropdown-item" href="/sessions/new">S'identifier</a> 


      </div>
    </div>
    <%end%>

    </nav>

   
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h1 class="display-3">Tu veux du gossip?!</h1>
        <p>Tu es au bon endroit pour te rencarder sur les derniers potins et comérer sur ton voisin!</p>
        <p><a class="btn btn-primary btn-lg" href="#" role="button">Clique ici &raquo;</a></p>
      </div>
    </div>

            <% if flash[:success]%>
             <!-- Bootstrap Alert -->
            <div class="alert alert-success" role="alert">
              <!-- Fin Bootstrap Alert -->
            <%=flash[:success]%>
            </div>
            <%end%>

            <% if flash[:notice]%>
            <!-- Bootstrap Alert -->
            <div class="alert alert-danger" role="alert">
            <!-- Fin Bootstrap Alert -->
            <%= flash[:notice]%> 
            </div>
            <% end %>
            
    <%= yield %>
  </body>
</html>
